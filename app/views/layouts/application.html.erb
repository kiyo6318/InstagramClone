<!DOCTYPE html>
<html>
  <head>
    <title>InstagramClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
            <span class="sr-only">InstagramClone</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <span class="navbar-brand"><%= link_to "InstagramClone",pictures_path,:style=>"color:black;" %></span>
        </div>
        <div id="gnavi" class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <li><%= link_to current_user.name,user_path(current_user.id) %></li>
              <li><%= link_to "新規投稿",pictures_new_path %></li>
              <li><%= link_to "ログアウト",destroy_session_path(current_user.id),method: :delete %></li>
            <% else %>
              <li><%= link_to "アカウント新規登録",users_new_path %></li>
              <li><%= link_to "ログイン",sessions_new_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-offset-1 col-md-offset-5">
            <% if flash[:notice] %>
              <p><%= flash[:notice] %></p>
            <% end %>
            <%= yield %>
  </body>
</html>